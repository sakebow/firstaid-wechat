/* fill page without any blank area */
page{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
/* app-container : what's this? I never use this */
.container {
  justify-content: space-between;
  box-sizing: border-box;
  flex-direction: column;
} 
/* the foot of page */
.footer {
  justify-content: space-around;
  width: 100%;
  padding: 2% 0;
  background-color: lightskyblue;
  flex-direction: row;
}
/* the head of main page */
.header {
  width: 100%;
  justify-content: space-between;
  flex-direction: row;
}
.header, .container, .footer {
  display: flex;
  display: -webkit-flex;
}
/* the search part of main page */
.header-search {
  background-color: white;
  width: 90%;
  margin: 0 auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  border-style: solid;
}
/* search part - input text part */
.header-search-input {
  width: 84%;
}
/* search part - button part */
.header-search-button {
  text-align: center;
  width: 15%;
}
