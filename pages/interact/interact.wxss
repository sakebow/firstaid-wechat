@import '../video/video.wxss';

/* 正在播放显示 */
.playing {
  position: absolute;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  height: 300rpx;
  justify-content: center;
}
/* 文字显示加上简单的描边，让文字看起来更清晰 */
.playing text {
  text-shadow: 1rpx 1rpx 7rpx black;
}
/* 操作按钮 */
.operation-btn {
  padding: 25rpx 0;
}
/* 数据按钮 */
.data-btn {
  width: 25%;
  padding: 10rpx 0;
  text-align: center;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 10rpx;
}
.data-btn view {
  padding: 5rpx 0;
}
/* 警示文本 */
.alert-btn {
  width: 25%;
  text-align: center;
  font-size: 200%;
}